<h1><%= config.author %></h1>
<p><%= config.subtitle %></p>

 <ul>
 <% page.posts.each(function(post){ %>
     <li>
      <h3>
                <a href="<%- url_for(post.path) %>">
           <%= post.title %>
          </a>
            </h3>
            <div class='text-muted'>
                <%= date(post.date, config.date_format) %> 
            </div>
            
            <% if(post.excerpt) { %>
                <p>
                    <%- post.excerpt %>
                </p>
            <% } %>
     </li>
   <% }) %>
 </ul>